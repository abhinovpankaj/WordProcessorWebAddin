{ "Patterns":
  [
    {
      "Description": "double spaces",
      "Find": "{2;}",
      "Replace": ""
    },
    {
      "Description": "add non breaking spaces after: Art./ §/ Abs./ S. / Hs./ Nr./ Ziff./ lit. (if a space was missing)",
      "Find": "(§)([0-9]) + …",
      "Replace": "§^s\\2"
    },
    {
      "Description": "add non breaking spaces after: Art./ § / Abs./ S. / Hs./ Nr./ Ziff./ lit.",
      "Find": "(§ )([0-9]) + …",
      "Replace": "§^s\\2"
    },
    {
      "Description": "add non breaking spaces before: % / € / $",
      "Find": "([0-9]) (%)+ …",
      "Replace": "\\1^s(%)+ …"
    },
    {
      "Description": "non breaking spaces for \"Anlagen\"",
      "Find": "(Anlage B )([0-9])",
      "Replace": "Anlage^sB^s\\2"
    },
    {
      "Description": "Add full stop after Art",
      "Find": "(Art )([0-9]) + (Art^s)([0-9]) ",
      "Replace": "Art.^s\\2"
    },
    {
      "Description": "add protected spaces before f. / ff.",
      "Find": "([0-9])(f*)(.) + ([0-9]) (f*)(.)",
      "Replace": "\\1^s\\2\\3"
    },
    {
      "Description": "move fullstop behind footnote",
      "Find": "(^2)(.)",
      "Replace": "\\2\\1"
    },
    {
      "Description": "correct hyphens",
      "Find": "([0-9])( ^= )([0-9])",
      "Replace": "\\1^=\\3"
    },
    {
      "Description": "correct hyphens",
      "Find": "([0-9])(-)([0-9])",
      "Replace": "\\1^=\\3"
    },
    {
      "Description": "Comma after court",
      "Find": "(BGH )(Urt.)",
      "Replace": "BGH, \\2"
    },
    {
      "Description": "Replace abbreviations",
      "Find": "ggf.",
      "Replace": "gegebenenfalls"
    },
    {
      "Description": "Replace abbreviations",
      "Find": "i.V.m.",
      "Replace": "in Verbindung mit"
    }
  ]
}

